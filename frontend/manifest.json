{
  "manifest_version": 3,
  "name": "Web QA Chatbot",
  "version": "2.0",
  "description": "Ask questions about the current site using an LLM chatbot",
  "permissions": ["tabs","sidePanel","activeTab", "scripting","sidePanel"],
  "host_permissions": ["<all_urls>"],
  "icons":{
    "32":"public/width_800.jpg"
  },
  "action": {
    "default_popup": "intro.html"
  },
  "side_panel":{
    "default_path":"intro.html"
  },
  "background":{
    "service_worker":"service_worker.js"
  }
}
